@@ -1719,6 +1763,54 @@ togglefloating(const Arg *arg)
 	arrange(selmon);
 }
 
+void
+togglescratch(const Arg *arg)
+{
+	Client *c, *next, *found = NULL;
+	Monitor *mon;
+	int tags = 0, monfound;
+
+	for (mon = mons; mon; mon = mon->next) {
+		monfound = 0;
+		for (c = mon->stack; c; c = next) {
+			next = c->snext;
+			if (c->scratchkey != ((char**)arg->v)[0][0])
+				continue;
+
+			/* awesomebar / wintitleactions compatibility
+			if (HIDDEN(c)) {
+				XMapWindow(dpy, c->win);
+				setclientstate(c, NormalState);
+			}
+			*/
+
+			unfocus(c, 0);
+			monfound = 1;
+
+			if (!found || mon == selmon) {
+				found = c;
+				tags = (c->tags == 0 ? selmon->tagset[selmon->seltags] : 0);
+			}
+
+			detachstack(c);
+			attachstack(c);
+			c->tags = tags;
+			if (c->tags && c->isfloating)
+				XRaiseWindow(dpy, c->win);
+		}
+
+		if (monfound)
+			arrange(mon);
+	}
+
+	if (found) {
+		focus(ISVISIBLE(found) ? found : NULL);
+		arrange(selmon);
+	} else {
+		spawnscratch(arg);
+	}
+}
+
 void
