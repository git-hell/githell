  - DB=postgres DB_USER=postgres DB_PASSWORD="" PAIR_DB_USER=root PAIR_DB_PASSWORD="" PAIR=1
  - DB=mysql DB_USER=root DB_PASSWORD="" PAIR_DB_USER=postgres PAIR_DB_PASSWORD="" PAIR=1

